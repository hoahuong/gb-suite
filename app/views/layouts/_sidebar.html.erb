<header class="main-header">

  <a href="#" target="_self" class="logo">
    <span class="logo-mini"><%= t('.logo_mini').html_safe %></span>
    <span class="logo-lg"><%= t('.logo_lg').html_safe %></span>
  </a>

  <nav class="navbar navbar-static-top" role="navigation">
    <div class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </div>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav"></ul>
      <a href="#" target="_self">
        <div class="pull-left image">
            <%= image_tag '/images/medium/pen.png', class: 'img-circle img-input-kpi', border: 0 %>
        </div>
      </a>
    </div>
  </nav>
</header>

<aside class="main-sidebar">
  <section class="sidebar">
    <div class="user-panel">
      <%= link_to profile_index_path, target:"_self" do %>
        <div class="pull-left image">
          <%= image_tag current_user.avatar.url(:medium), class: 'img-circle', border: 0, onError:"this.onerror=null;this.src='/images/medium/missing.png';" %>
        </div>
      <% end %>

      <div class="pull-left info">
        <p class="info">
          <%= link_to profile_index_path, target:"_self", class: "display-name" do %>
            <%= current_user[:first_name] + ' ' + current_user[:last_name] %>
          <% end %>
        </p>
        <a class="display-status"><i class="fa fa-circle text-success"></i> <%= Company.find(current_user[:company_id]).short_name %></a>
      </div>
    </div>
    <ul class="sidebar-menu">
      <li class="header"></li>
      <li class="<%= menu_active_class('profile') %>">
        <%= link_to profile_index_path, target:"_self" do %>
          <i class="fa fa-user"></i>
          <span><%= t('.my_profile_label') %></span>
        <% end %>
      </li>
      <li class="<%= menu_active_class('kpis') %>">
        <%= link_to kpis_path, target:"_self" do %>
          <i class="fa fa-bar-chart-o"></i>
          <span><%= t('.kpi_dashboard_label') %></span>
        <% end %>
      </li>
      <li class="<%= menu_active_class('ranking') %>">
        <%= link_to ranking_index_path, target:"_self" do %>
          <i class="fa fa-trophy"></i>
          <span><%= t('.ranking_label') %></span>
        <% end %>
      </li>
      <li class="<%= menu_active_class('settings') %>">
        <%= link_to settings_path, target:"_self" do %>
          <i class="glyphicon glyphicon-wrench"></i>
          <span><%= t('.setting_label') %></span>
        <% end %>
      </li>
      <li>
        <a href="<%= destroy_user_session_path %>" data-method="delete">
          <i class="fa fa-sign-out"></i>
          <span><%= t('.log_out_label') %></span>
        </a>
      </li>
    </ul>
  </section>
</aside>

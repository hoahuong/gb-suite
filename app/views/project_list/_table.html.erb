        function render(target){
            
             var status = $("#search").val().trim();
              $.ajax({
                type: "POST",
                url:"/project_list/search",
                 data: {status: JSON.stringify(status)},
                success : function (data) {
                $("#example").html(data);

                    var trHTML = '';
                    var no=0;


                     trHTML = '<tbody id="people">';
                     trHTML += '<tr><th >no</th><th >name</th><th  >start_at</th><th >end_at</th>/tr>';
                   
                    //trHTML= '<tr ><th>No</th><th>'+'<%= link_to "name", :sort => "name" %>'+'</th><th><%= link_to "start_at", :sort => "start_at" %></th><th><%= link_to "end_at", :sort => "end_at" %></th><th><%= link_to "description", :sort => "description" %></th><th><%= link_to "status", :sort => "status" %></th><th>show</th><th>edit</th><th>delete</th></tr>';

                  $.each(data, function (i, item) {
                      no=no+1;
                      trHTML +='<tr><td>' + no +'</td><td>'  + item.name + '</td><td>' + item.start_at + '</td><td>' + item.end_at + '</td></tr>';
                  });

                     trHTML += '</tbody>';

                  $('#example').append(trHTML);
                   }       
              })
          };
</script>


  $('#addNew').click(function (e) {
   $($('#newModal').find('.btn-primary#save')).show();
    $($('#newModal').find('.btn-primary#save')).text("Add")
    $($('#newModal').find('.btn-primary#cancel')).removeClass('btn-primary').addClass('btn-default');
    
    $('#newModal').on('shown.bs.modal', function () {
      $($('#newModal').find('#myModalLabel')).text("Add New Staff");
      $($('#newModal').find('#staffName')).removeAttr('disabled')
      $($('#newModal').find('#email')).removeAttr('disabled');
      $($('#newModal').find('#staffCode')).removeAttr('disabled');
      $($('#newModal').find('#companyName')).removeAttr('disabled');
      $($('#newModal').find('#birthday')).removeAttr('disabled');
      $($('#newModal').find('#gender')).removeAttr('disabled');

      $($('#newModal').find('#staffName')).val('');
      $($('#newModal').find('#email')).val('');
      $($('#newModal').find('#staffCode')).val('');
      $($('#newModal').find('#companyName')).val('');  
    });
  });

  $('i[data-toggle="modal"]').click(function (e) {
  if (e.target) {        
    var record = $('#'+e.target.id).closest('tr');
      switch(e.target.id) {
        case "view":
        {

            $($('#newModal').find('.btn-primary#save')).hide();
            $($('#newModal').find('.btn-default#cancel')).removeClass('btn-default').addClass('btn-primary');
            $('#newModal').on('shown.bs.modal', function () {
            $($(this).find('#myModalLabel')).text("Staff Profile");

            $($(this).find('#staffName')).val($(record.find('.staff_name')).text());
            $($(this).find('#staffName')).attr('disabled', 'disabled');
            $($(this).find('#email')).val($(record.find('.email')).text());
            $($(this).find('#email')).attr('disabled', 'disabled');
            $($(this).find('#staffCode')).val($(record.find('.staff_code')).text());
            $($(this).find('#staffCode')).attr('disabled', 'disabled');
            $($(this).find('#companyName')).val($(record.find('.company_name')).text());
            $($(this).find('#companyName')).attr('disabled', 'disabled');
            $($(this).find('#birthday')).attr('disabled', 'disabled');
            $($(this).find('#gender')).attr('disabled', 'disabled');
          });
          break;
        }
        case "edit":
        {
            $($('#newModal').find('.btn-primary#save')).show();
            $($('#newModal').find('.btn-primary#save')).text("Save changes");
            $($('#newModal').find('.btn-primary#cancel')).removeClass('btn-primary').addClass('btn-default');

          $('#newModal').on('shown.bs.modal', function () {
            $($(this).find('#myModalLabel')).text("Edit Staff Profile");

            $($(this).find('#staffName')).removeAttr('disabled')
            $($(this).find('#email')).removeAttr('disabled');
            $($(this).find('#staffCode')).removeAttr('disabled');
            $($(this).find('#companyName')).removeAttr('disabled');
            $($(this).find('#birthday')).removeAttr('disabled');
            $($(this).find('#gender')).removeAttr('disabled');

            $($(this).find('#staffName')).val($(record.find('.staff_name')).text());
            $($(this).find('#email')).val($(record.find('.email')).text());
            $($(this).find('#staffCode')).val($(record.find('.staff_code')).text());
            $($(this).find('#companyName')).val($(record.find('.company_name')).text());  
          });
          break;
        }
      }
    }
});
</script>
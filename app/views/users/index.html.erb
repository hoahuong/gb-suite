		
<div class="row">
  <div class="col-xs-12">
  <h1>Users</h1>
    <div class="box">
      <div style="margin-top: 10px; margin-bottom: 10px; border-bottom: 2px solid #dddddd; display: -webkit-box;">
        <!-- Start search section -->
        <!-- user name -->
        <div class="col-sm-4 col-md-2 form-group">
          <label>Staff name</label>
          <input type="text" class="form-control" placeholder="Staff name">
        </div>
        <!-- select company -->
        <div class="col-sm-4 col-md-2 form-group">
          <label>Company name</label>
          <select class="form-control">
            <option></option>
            <option>IBSVN</option>
            <option>IBSGB</option>
            <option>IBSC</option>
            <option>IBSS</option>
          </select>
        </div>
        <div class="col-sm-4 col-md-2 form-group">
          <label>Staff code</label>
          <input type="text" class="form-control" placeholder="Staff code">
        </div>
        <div class="col-sm-4 col-md-2 form-group">
          <label>Email</label>
          <input type="text" class="form-control" placeholder="Email">
        </div>

        <div class="col-sm-4 col-md-2" style="margin-top: 25px;">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
        <!-- Button trigger modal -->
        <div class="col-sm-4 col-md-2" style="margin-top: 15px;">
          <button type="button" id="addNew" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#newModal">
            Add new
          </button>
        </div>
        <!-- End search section -->

        <!-- Modal -->
        <div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Add new staff</h4>
              </div>
              <%= render 'form', user: @user %>
            </div>
          </div>
        </div>
        <!-- end modal -->

      </div>
      <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th style="background-image: inherit; pointer-events: none;">No.</th>
              <th>Staff name</th>
              <th>Company name</th>
              <th>Email</th>
              <th>Staff code</th>
              <th style="background-image: inherit; pointer-events: none;">Action</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>01</td>
              <td class="staff_name">John Son 1</td>
              <td class="company_name">IBSGB</td>
              <td class="email">john.son.01@ibs.co.jp</td>
              <td class="staff_code">0001</td>
              <td>
               
                <i class="fa fa-eye fa-lg" id="view" style="cursor: pointer;" data-toggle="modal" data-target="#newModal"></i>
                <i class="fa fa-pencil-square-o fa-lg" id="edit" style="margin-left: 10px; margin-right: 10px; cursor: pointer;" data-toggle="modal" data-target="#newModal"></i>
                <i class="fa fa-trash-o fa-lg" style="cursor: pointer;" data-toggle="modal" data-target="#delModal"></i>
              </td>
            </tr>
            <tr>
              <td>02</td>
              <td class="staff_name">John Son 2</td>
              <td class="company_name">IBSGB</td>
              <td class="email">john.son.02@ibs.co.jp</td>
              <td class="staff_code">0002</td>
              <td> 
                <i class="fa fa-eye fa-lg" id="view" style="cursor: pointer;" data-toggle="modal" data-target="#newModal"></i>
                <i class="fa fa-pencil-square-o fa-lg" id="edit" style="margin-left: 10px; margin-right: 10px; cursor: pointer;" data-toggle="modal" data-target="#newModal"></i>
                <i class="fa fa-trash-o fa-lg" style="cursor: pointer;" data-toggle="modal" data-target="#delModal"></i>
              </td>
            </tr>
          </tbody>
        </table>

        <!-- Modal -->
        <div class="modal fade" id="delModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Delete staff</h4>
              </div>
              <div class="modal-body">
                <p>Do you want to delete this staff?</p>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                  <button type="button" class="btn btn-primary">Delete</button>
              </div>
            </div>
          </div>
        </div>

      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div><!-- /.col -->
</div><!-- /.row -->

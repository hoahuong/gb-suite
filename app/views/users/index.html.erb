                <h4 class="modal-title" id="myModalLabel">Add new staff</h4>
              </div>
              <%#= render 'form', user: @user %>
            </div>
          </div> -->
        </div>
        <!-- end modal -->

      </div>
      
      <!-- table -->
      <div class="box-body" id="table_content">
        <%= render 'table', users: @users %>
      </div>

    </div><!-- /.box -->
  </div><!-- /.col -->
</div><!-- /.row -->
<script type="text/javascript">
  var newModalHtml;
  $(document).ready(function() {
      newModalHtml = $('#newModal').clone().html();
  });

  $('#addNew').click(function (e) {
   $($('#newModal').find('.btn-primary#save')).show();
    $($('#newModal').find('.btn-primary#save')).text("Add")
    $($('#newModal').find('.btn-primary#cancel')).removeClass('btn-primary').addClass('btn-default');
    
    $('#newModal').on('shown.bs.modal', function () {
      $($('#newModal').find('#myModalLabel')).text("Add New Staff");
      $($('#newModal').find('#staffName')).removeAttr('disabled')
      $($('#newModal').find('#email')).removeAttr('disabled');
      $($('#newModal').find('#staffCode')).removeAttr('disabled');
      $($('#newModal').find('#companyName')).removeAttr('disabled');
      $($('#newModal').find('#birthday')).removeAttr('disabled');
      $($('#newModal').find('#gender')).removeAttr('disabled');

      $($('#newModal').find('#staffName')).val('');
      $($('#newModal').find('#email')).val('');
      $($('#newModal').find('#staffCode')).val('');
      $($('#newModal').find('#companyName')).val('');  
    });
  });


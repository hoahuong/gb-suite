		
<div class="row">
  <div class="col-xs-12">
  <h1>Users</h1>
    <div class="box">
      <div style="margin-top: 10px; margin-bottom: 10px; border-bottom: 2px solid #dddddd; display: -webkit-box;">
        <!-- user name -->
        <div class="col-sm-4 col-md-2 form-group">
          <label>Staff name</label>
          <input type="text" class="form-control" placeholder="Staff name">
        </div>
        <!-- select company -->
        <div class="col-sm-4 col-md-2 form-group">
          <label>Company name</label>
          <select class="form-control">
            <option></option>
            <option>IBSVN</option>
            <option>IBSGB</option>
            <option>IBSC</option>
            <option>IBSS</option>
          </select>
        </div>
        <div class="col-sm-4 col-md-2 form-group">
          <label>Staff code</label>
          <input type="text" class="form-control" placeholder="Staff code">
        </div>
        <div class="col-sm-4 col-md-2 form-group">
          <label>Email</label>
          <input type="text" class="form-control" placeholder="Email">
        </div>

        <div class="col-sm-4 col-md-2" style="margin-top: 25px;">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>

        <!-- Button trigger modal -->
        <div class="col-sm-4 col-md-2" style="margin-top: 15px;">
          <%= link_to new_user_path, remote: true do %>
          <button type="button" id="addNew" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#newModal">Add new</button>
          <% end %>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="newModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <!-- <div class="modal-dialog" role="document">
            <div class="modal-content">
